generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String?
  refreshToken String?
  provider     String   @default("local")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  role         String

  firstName String
  lastName  String

  emailVerified    Boolean   @default(false)
  resetOTP         String?
  resetOTPExpiry   DateTime?
  verificationCode String?

  gender  String?
  dob     String?
  address String?

  username String @unique

  phoneNumber String?
  city        String?
  state       String?
  country     String?

  image      String?
  joinedDate String?

  isDeleted Boolean @default(false)

  interests String[]

  admin      Admin?
  roles      UserRole[]
  brand      Brand[]
  savedItems Saved[]
  cartItems  CartItem[]
  orders     Order[]
}

model Admin {
  id        String   @id @default(uuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  position  String?
  user      User     @relation(fields: [userId], references: [id])
}

model UserRole {
  id        String     @id @default(uuid())
  userId    String
  role      SystemRole
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, role]) // prevent duplicates
}

enum SystemRole {
  ADMINISTRATOR
  CLIENT
  PROFESSIONAL
  USER
  CREATORS
  BRAND
}

model Brand {
  id          String  @id @default(uuid())
  brandName   String
  brandLogo   String?
  brandType   String
  description String?
  website     String?
  brandColor  String?

  socials Socials[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  products  Product[]

  isDeleted Boolean @default(false)

  @@unique([userId])
}

model Socials {
  id  String @id @default(uuid())
  url String

  brand   Brand?  @relation(fields: [brandId], references: [id])
  brandId String?

  @@index([brandId])
  @@map("socials")
}

model Product {
  id               String  @id @default(uuid())
  name             String
  slug             String  @unique
  description      String  @db.Text
  shortDescription String?

  category String

  price          Decimal  @db.Decimal(10, 2)
  compareAtPrice Decimal? @db.Decimal(10, 2)
  sku            String   @unique
  stock          Int      @default(0)

  // Media & Variants
  thumbnail       String?
  images          String[] // Array of URLs from Cloudflare
  sizes           String[]
  availableColors Json? // Stores the color objects [{name, hex}]

  status     ProductStatus @default(DRAFT)
  isFeatured Boolean       @default(false)

  // Relationships
  brand   Brand  @relation(fields: [brandId], references: [id])
  brandId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isDeleted Boolean @default(false)

  savedBy    Saved[]
  cartItems  CartItem[]
  orderItems OrderItem[]

  @@index([brandId])
}

enum ProductStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Saved {
  id String @id @default(uuid())

  user      User    @relation(fields: [userId], references: [id])
  userId    String
  product   Product @relation(fields: [productId], references: [id])
  productId String

  createdAt DateTime @default(now())

  // One user can only save a specific product once
  @@unique([userId, productId])
  @@index([userId])
}

model CartItem {
  id        String   @id @default(uuid())
  userId    String
  productId String
  quantity  Int      @default(1)
  size      String?
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId, size, color])
  @@index([userId])
}

// Add to your existing schema.prisma

model Order {
  id          String @id @default(uuid())
  orderNumber String @unique @default(cuid()) // e.g., "ORDER-ABC123"

  // Customer Info
  user   User   @relation(fields: [userId], references: [id])
  userId String

  // Shipping Details
  shippingAddress ShippingAddress?

  // Order Details
  items       OrderItem[]
  subtotal    Decimal     @db.Decimal(10, 2)
  discount    Decimal     @default(0) @db.Decimal(10, 2)
  deliveryFee Decimal     @default(15) @db.Decimal(10, 2)
  total       Decimal     @db.Decimal(10, 2)

  // Status
  status        OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)

  // Payment Info
  paymentMethod  String? // "card", "bank_transfer", etc.
  transactionRef String? @unique

  // Notes
  customerNote String? @db.Text

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  paidAt      DateTime?
  shippedAt   DateTime?
  deliveredAt DateTime?
  cancelledAt DateTime?

  @@index([userId])
  @@index([status])
  @@index([orderNumber])
}

model OrderItem {
  id String @id @default(uuid())

  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId String

  product   Product @relation(fields: [productId], references: [id])
  productId String

  // Snapshot of product at time of purchase
  productName  String
  productImage String
  productSlug  String

  quantity Int
  price    Decimal @db.Decimal(10, 2) // Price at time of purchase
  size     String?
  color    String?

  createdAt DateTime @default(now())

  @@index([orderId])
  @@index([productId])
}

model ShippingAddress {
  id String @id @default(uuid())

  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId String @unique

  firstName String
  lastName  String
  phone     String
  address   String
  city      String
  state     String
  country   String @default("Nigeria")

  createdAt DateTime @default(now())
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}
