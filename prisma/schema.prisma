generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String?
  refreshToken String?
  provider     String   @default("local")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  role         String

  isDeleted Boolean @default(false)

  firstName String
  lastName  String

  emailVerified    Boolean   @default(false)
  resetOTP         String?
  resetOTPExpiry   DateTime?
  verificationCode String?

  gender  String?
  dob     String?
  address String?

  username String @unique

  phoneNumber String?
  city        String?
  state       String?
  country     String?

  image      String?
  joinedDate String?

  interests String[]

  roles UserRole[]
  brand Brand[]

  admin Admin?
}

model Admin {
  id        String   @id @default(uuid())
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  position  String?
  user      User     @relation(fields: [userId], references: [id])
}

model UserRole {
  id        String     @id @default(uuid())
  userId    String
  role      SystemRole
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, role]) // prevent duplicates
}

enum SystemRole {
  ADMINISTRATOR
  CLIENT
  PROFESSIONAL
  USER
  CREATORS
  BRAND
}

model Brand {
  id          String  @id @default(uuid())
  brandName   String
  brandLogo   String?
  brandType   String
  description String?
  website     String?
  brandColor  String?

  socials Socials[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  products  Product[]

  @@unique([userId])
}

model Socials {
  id  String @id @default(uuid())
  url String

  brand   Brand?  @relation(fields: [brandId], references: [id])
  brandId String?

  @@index([brandId])
  @@map("socials")
}

model Product {
  id               String  @id @default(uuid())
  name             String
  slug             String  @unique
  description      String  @db.Text
  shortDescription String?

  category String

  price          Decimal  @db.Decimal(10, 2)
  compareAtPrice Decimal? @db.Decimal(10, 2)
  sku            String   @unique
  stock          Int      @default(0)

  // Media & Variants
  thumbnail       String?
  images          String[] // Array of URLs from Cloudflare
  sizes           String[]
  availableColors Json? // Stores the color objects [{name, hex}]

  status     ProductStatus @default(DRAFT)
  isFeatured Boolean       @default(false)

  // Relationships
  brand   Brand  @relation(fields: [brandId], references: [id])
  brandId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([brandId])
}

enum ProductStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
